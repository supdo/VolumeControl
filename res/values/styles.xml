<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
		<item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    
    <!-- style for the action bar backgrounds -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#555555</item>
        <item name="android:backgroundStacked">#000000</item>
        <item name="android:backgroundSplit">#000000</item>
        <item name="android:actionBarDivider">?android:attr/dividerVertical</item>
        <item name="android:textStyle">@style/MyActionBarText</item>
    </style>
    
    <style name="MyActionBarText" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:gravity">center</item>
    </style>

</resources>