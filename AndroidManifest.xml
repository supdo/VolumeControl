<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supdo.volumecontrol"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
	<!-- 创建桌面快捷方式的权限 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT"/>
    <!-- 音量控制权限 -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
<!--     <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
<!--     <uses-permission android:name="android.permission.RECORD_AUDIO" /> -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" android:uiOptions="splitActionBarWhenNarrow">
        <activity
            android:name="com.supdo.volumecontrol.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action
                    android:name="android.intent.action.CREATE_SHORTCUT" />
            </intent-filter>
        </activity>
        
        <receiver android:name="com.supdo.volumecontrol.SilenceWidgetProvider" 
            android:label="@string/onekey_silence"
            android:icon="@drawable/ic_silence_on" >
            <intent-filter >
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.supdo.volumecontrol.silence" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/silence_provider" />
        </receiver>
    </application>

</manifest>